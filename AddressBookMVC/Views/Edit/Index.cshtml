@model AddressBookMVC.Models.Contact
@{
    ViewData["Title"] = "Edit";
    var contactList = (List<AddressBookMVC.Models.Contact>)ViewData["contact"];
}

<div class="col-3">
    @await Html.PartialAsync("_ContactList", contactList)
</div>

<div class="form-popup" id="addContactForm">
    <form class="row" id="myForm" method="post">
        <input hidden asp-for="Id" />
        <div class="form-row m-2">
            <div class="form-group col-md-12 px-4 pad-r-30 m-0 py-1">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" type="text" class="form-control border-dark rounded-0" id="name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12 px-4 m-0 py-1">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="text" class="form-control border-dark rounded-0" id="email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 px-4 m-0 py-1">
                <label asp-for="Mobile">Mobile</label>
                <input asp-for="Mobile" type="text" class="form-control border-dark rounded-0" id="mobile">
            </div>
            <div class="form-group col-md-6 pr-4 m-0 py-1">
                <label asp-for="Landline">Landline</label>
                <input asp-for="Landline" type="text" class="form-control border-dark rounded-0" id="landline">
            </div>
            <div class="form-group col-md-12  px-4 m-0 py-1">
                <label asp-for="Website">Website</label>
                <input asp-for="Website" type="text" class="form-control border-dark rounded-0" id="website">
            </div>
            <div class="form-group col-md-12 px-4 m-0 py-1">
                <label asp-for="Address">Address</label>
            </div>
            <div class="form-group col-md-12 px-4 m-0 py-1">
                <textarea asp-for="Address" id="address"></textarea>
            </div>
        </div>
        <div class="pr-4 mb-2" id="formButton">
            <button type="submit" class="btn add-button float-right" id="update_btn">Update</button>
            <a href="/home" type="submit" class="btn add-button float-right mr-2" id="cancel_btn">Cancel</a>
        </div>
    </form>
</div>
